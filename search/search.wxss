/* pages/test/congUI/search/search.wxss */
@import "../icon/iconfont.wxss";

.contant {
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    width: 100%;
    height: 100%;
    background-color: #fff;
    border-radius: 8rpx;
    color: #595959;
    transition: box-shadow 0.4s;
}

.left-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 60rpx;
    transition: color 0.4s;
}

.left-icon:active {
    color: #8c8c8c;
}

.input {
    flex: 1;
    padding: 0 20rpx;
    transition: color 0.4s;
}

.right-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 60rpx;
    transition: color 0.4s;
}

.right-icon:active {
    color: #8c8c8c;
}

i {
    transition: color 0.4s;
}